{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "resource.schema.json",
    "type": "object",
    "reference_name": "BACKEND_RESOURCE",
    "required": [
        "local_hash",
        "remote_hash",
        "name",
        "state",
        "tags"
    ],
    "definitions": {
        "State": {
            "enum": ["CREATED", "CREATING", "UPDATING", "UPDATED", "DELETED", "DELETING"]
        },
        "HistoryElement": {
            "type": "object",
            "required": ["state", "timestamp"],
            "properties": {
                "state": {"$ref": "#/definitions/State"},
                "timestamp": {"type": "string"}
            },
            "additionalProperties": true
        }
    },
    "properties": {
        "local_hash": {
            "$id": "#/properties/local_hash",
            "type": "string"
        },
        "remote_hash": {
            "$id": "#/properties/remote_hash",
            "type": "string"
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string"
        },
        "state": {
            "$id": "#/properties/state",
            "$ref": "#/definitions/State"
        },
        "tags": {
            "$id": "#/properties/tags",
            "type": "object",
            "additionalProperties": true
        }
    },
    "additionalProperties": true
}