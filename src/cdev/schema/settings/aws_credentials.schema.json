{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "aws_credentials.schema.json",
    "type": "object",
    "reference_name": "BACKEND_AWS_CREDENTIAL",
    "required": [
        "credentials_type",
        "value"
    ],
    "properties": {
        "credentials_type": {
            "enum": ["raw_credentials", "profile"]
        },
        "value": {
            "oneOf": [
                {
                    "type": "object",
                    "required": [
                        "access_key",
                        "secret_key"
                    ],
                    "properties": {
                        "access_key": {"type": "string"},
                        "secret_key": {"type": "string"}
                    }
                },
                {
                    "type": "string"
                }
            ]
        }
    },
    "additionalProperties": true
}