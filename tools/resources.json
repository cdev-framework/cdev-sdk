{
    "services": [
        {
            "service": "iam",
            "folder": "2010-05-08",
            "resources": [
                {
                    "name": "Policy",
                    "ruuid": "cdev::aws::iam::policy",
                    "create": "CreatePolicy",
                    "remove": {
                        "action": "DeletePolicy",
                        "overrides": {"PolicyArn": "Arn"}
                    },
                    "update": "CreatePolicyVersion"
                },
                {
                    "name": "Role",
                    "ruuid": "cdev::aws::iam::role",
                    "create": "CreateRole",
                    "remove": "DeleteRole",
                    "update": "UpdateRole"
                }
            ]
        },
        {
            "service": "dynamodb",
            "folder": "2012-08-10",
            "resources": [
                {
                    "name": "Table",
                    "ruuid": "cdev::aws::dynamodb::table",
                    "create": {
                        "action": "CreateTable",
                        "waits": "TableExists"
                    },
                    "update": "UpdateTable",
                    "remove": {
                        "action": "DeleteTable",
                        "waits": "TableNotExists"
                    }
                }
            ]
        },
        {
            "service": "s3",
            "folder": "2006-03-01",
            "resources": [
                {
                    "name": "Bucket",
