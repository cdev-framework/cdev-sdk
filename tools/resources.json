                    "remove": "DeleteBucket"
                }
            ]
        },
        {
            "service": "sqs",
            "folder": "2012-11-05",
            "resources": [
                {
                    "name": "Queue",
                    "ruuid": "cdev::aws::sqs::queue",
                    "create": "CreateQueue",
                    "remove": "DeleteQueue"
                }
            ]
        },
        {
            "service": "apigatewayv2",
            "folder": "2018-11-29",
            "resources": [
                {
                    "name": "Api",
                    "ruuid": "cdev::aws::apigatewayv2::api",
                    "create": "CreateApi",
                    "update": "UpdateApi",
                    "remove": "DeleteApi"
                },
                {
                    "name": "Route",
                    "ruuid": "cdev::aws::apigatewayv2::route",
                    "create": {
                        "action": "CreateRoute",
                        "additional_info": ["ApiId"]
                    },
                    "update": "UpdateRoute",
                    "remove": "DeleteRoute"
                },
                {
                    "name": "Integration",
                    "ruuid": "cdev::aws::apigatewayv2::integration",
                    "create": {
                        "action": "CreateIntegration",
