                    "ruuid": "cdev::aws::apigatewayv2::stage",
                    "create": {
                        "action": "CreateStage",
                        "additional_info": ["ApiId"]
                    },
                    "update": "UpdateStage",
                    "remove": "DeleteStage"
                },
                {
                    "name": "Deployment",
                    "ruuid": "cdev::aws::apigatewayv2::deployment",
                    "create": {
                        "action": "CreateDeployment",
                        "additional_info": ["ApiId"]
                    },
                    "update": "UpdateDeployment",
                    "remove": "DeleteDeployment"
                }

            ]
        }
